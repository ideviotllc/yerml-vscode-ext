{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "YERML",
	"scopeName": "source.yerml", 
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"name": "entity.other.document.begin.yerml",
			"match": "^---"
		},
		{
			"name": "entity.other.document.end.yerml",
			"match": "^\\.{3}"
		},
		{
			"include": "#import"
		},
		{
			"include": "#import-path"
		},
		{
			"include": "#entity-count"
		}
	],
	"repository": {
		"comment": {
			"begin": "(?:(^[ \\t]*)|[ \\t]+)(?=#\\p{Print}*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.yerml"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.yerml"
						}
					},
					"end": "\\n",
					"name": "comment.line.number-sign.yerml"
				}
			]
		},
		"import": {
			"name": "keyword.other.import.yerml",
			"match": "^import"
		},
		"import-path": {
			"name": "string.quoted.double.import.path.yerml",
			"begin": "(?<=^import[ \\t]+)\"",
			"end": "\"[ \\t]*$",
			"patterns": [
				{
					"include": "#import-path-windows"
				},
				{
					"include": "#import-path-unix"
				}
			]
			
		},
		"import-path-windows": {
			"match": "(([a-zA-Z]:)|(\\.{1-2}))\\(((?![<>:\"/\\|?*]).)+((?<![ .])\\)?)*"
		},
		"import-path-unix": {
			"match": "\\/$|(^(?=\\/)|^\\.|^\\.\\.)(\\/(?=[^/\\0])[^/\\0]+)*\\/?"
		},
		"entity-name": {
			"name": "entity.name.yerml",
			"begin": "(?<=^[ \\t]*)",
			"end": "(?=[ \\t]*:)",
			"patterns": [
				{
					"match": "[a-z_][A-Za-z0-9_\\-]*"
				}
			]
		},
		"entity-count": {
			"name": "constant.numeric.entity.count.yerml",
			"begin": "(?<=:[ \\t]+)",
			"end": "(?=[ \\t]*$)",
			"patterns": [
				{
					"match": "([0-9]+)|([+-*])|([0-9]+[+-*])"
				}
			]
		},
		"entity-type": {
			"name": "entity.name.type.yerml",
			"patterns": [
				{
					"begin": "(?<=(^[ \\t]*[a-z_][A-Za-z0-9_-]*[ \\t]*:[ \\t]+))",
					"end": "(?=[ \\t]|$)",
					"patterns": [
						{
							"match": "[A-Za-z_][A-Za-z0-9_-]*"
						}
					]
				},
				{
					"begin": "(?:(^))",
					"end": "(?:(:))",
					"patterns": [
						{
							"match": "[A-Za-z_][A-Za-z0-9_-]*"
						}
					]
				}
			]			
		},
		"entity-constraint": {
			"name": "keyword.operator.entity.constraint.yerml",
			"begin": "(?:(^[ \\t]*[a-z_][A-Za-z0-9_-]*[ \\t]*:[ \\t]+))",
			"end": "(?:[ \\t]*|$)",
			"patterns": [
				{
					"match": "(\\<|\\>|\\<=|\\>=|\\!=|[Cc]=|_=|=)"
				}
			]
		}
	}
}