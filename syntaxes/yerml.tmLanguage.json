{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "YERML",
	"scopeName": "source.yerml", 
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"name": "entity.other.document.begin.yerml",
			"match": "^---"
		},
		{
			"name": "entity.other.document.end.yerml",
			"match": "^\\.{3}"
		},
		{
			"name": "constant.numeric.entity.descriptor.count.yerml",
			"include": "#entity_count"
			
		},
		{
			"name": "storage.type.entity.descriptor.type.yerml",
			"include": "#entity_type"

		},
		{
			"name": "keyword.operator.entity.descriptor.constraint.yerml",
			"include": "#entity_contraint"
		}
	],
	"repository": {
		"comment": {
			"begin": "(?:(^[ \\t]*)|[ \\t]+)(?=#\\p{Print}*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.yerml"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.yerml"
						}
					},
					"end": "\\n",
					"name": "comment.line.number-sign.yerml"
				}
			]
		},
		"odlm": {
			"patterns": [
				{
					"name": "delimeter.optional.yerml",
					"match": "(^[ \\t]*)"
				}
			] 
		},
		"idlm": {
			"patterns": [
				{
					"name": "delimeter.inline.yerml",
					"match": "(^[ \\t]+)"
				}
			] 
		},
		"entity_name": {
			"patterns": [
				{
					"match": "[a-z_]+[A-Za-z0-9_-]+"
				}
			]
		},
		"entity_type_name": {
			"patterns": [
				{
					"match": "[A-Za-z_]+[A-Za-z0-9_-]+"
				}
			]
		},
		"entity_count": {
			"patterns": [
				{
					"begin": "(?:(^#odlm#entity_name#odlm:#idlm[ \\t\\S]*))",
					"match": "([0-9]+)|([+-*])|([0-9]+[+-*])",
					"end": ""
				}
			]			
		},
		"entity_type": {
			"patterns": [
				{
					"begin": "(?:(^#odlm#entity_name#odlm:#idlm[ \\t\\S]*))",
					"match": "#entity_type_name",
					"end": ""
				},
				{
					"begin": "(?:(^))",
					"match": "#entity_type_name",
					"end": "(?:(:))"
				}
			]			
		},
		"entity_constraint": {
			"patterns": [
				{
					"begin": "(?:(^#odlm#entity_name#odlm:#idlm[ \\t\\S]*))",
					"match": "(\\<|\\>|\\<=|\\>=|\\!=|[Cc]=|_=|=)",
					"end": ""
				}
			]
		}
	}
}