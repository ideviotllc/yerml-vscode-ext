{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "YERML",
	"scopeName": "source.yerml", 
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"name": "entity.other.document.begin.yerml",
			"match": "^---"
		},
		{
			"name": "entity.other.document.end.yerml",
			"match": "^\\.{3}"
		},
		{
			"include": "#import"
		},
		{
			"include": "#import-path"
		},
		{
			"include": "#string-double-quoted"
		},
		{
			"include": "#string-single-quoted"
		},
		{
			"include": "#entity-definition"
		}
	],
	"repository": {
		"comment": {
			"begin": "(?:(^[ \\t]*)|[ \\t]+)(?=#\\p{Print}*$)",
			"beginCaptures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.yerml"
				}
			},
			"end": "(?!\\G)",
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.yerml"
						}
					},
					"end": "\\n",
					"name": "comment.line.number-sign.yerml"
				}
			]
		},
		"directive": {
			"begin": "^%",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.directive.begin.yerml"
				}
			},
			"end": "(?=$|[ \\t]+($|#))",
			"name": "meta.directive.yerml",
			"patterns": [
				{
					"captures": {
						"1": {
							"name": "keyword.other.directive.yerml.yerml"
						},
						"2": {
							"name": "constant.numeric.yerml-version.yerml"
						}
					},
					"match": "\\G(YERML)[ \\t]+(\\d+\\.\\d+)"
				},
				{
					"match": "\\S+",
					"name": "invalid.illegal.unrecognized.yerml"
				}
			]
		},
		"import": {
			"name": "keyword.other.import.yerml",
			"match": "^import"
		},
		"import-path": {
			"name": "string.quoted.double.import.path.yerml",
			"begin": "(?<=^import[ \\t]+)\"",
			"end": "\"[ \\t]*$",
			"patterns": [
				{
					"include": "#import-path-windows"
				},
				{
					"include": "#import-path-unix"
				}
			]
			
		},
		"import-path-windows": {
			"match": "(([a-zA-Z]:)|(\\.{1-2}))\\(((?![<>:\"/\\|?*]).)+((?<![ .])\\)?)*"
		},
		"import-path-unix": {
			"match": "\\/$|(^(?=\\/)|^\\.|^\\.\\.)(\\/(?=[^/\\0])[^/\\0]+)*\\/?"
		},
		"string-double-quoted": {
			"begin": "\"",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.yerml"
				}
			},
			"end": "\"",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.yerml"
				}
			},
			"name": "string.quoted.double.yerml",
			"patterns": [
				{
					"match": "\\\\([0abtnvfre \"/\\\\N_Lp]|x\\d\\d|u\\d{4}|U\\d{8})",
					"name": "constant.character.escape.yerml"
				},
				{
					"match": "\\\\\\n",
					"name": "constant.character.escape.double-quoted.newline.yerml"
				}
			]
		},
		"string-single-quoted": {
			"begin": "'",
			"beginCaptures": {
				"0": {
					"name": "punctuation.definition.string.begin.yerml"
				}
			},
			"end": "'(?!')",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.string.end.yerml"
				}
			},
			"name": "string.quoted.single.yerml",
			"patterns": [
				{
					"match": "''",
					"name": "constant.character.escape.single-quoted.yerml"
				}
			]
		},
		"entity-definition": {
			"patterns":[
				{
					"captures": {
						"1": {
							"name": "variable.parameter.yerml"
						},
						"2": {
							"name": "constant.numeric.entity.count.yerml"
						},
						"3": {
							"name": "entity.name.type.yerml"
						},
						"4": {
							"name": "keyword.operator.entity.constraint.yerml"
						}
					},
					"match": "^[ \\t]*([a-z_][A-Za-z0-9_-]*)[ \\t]*:[ \\t]*([0-9]*[+*-]?)[ \\t]*([A-Z][A-Za-z0-9_-]*)?(([ \\t]*(<=|>=|!=|[Cc]=|_=|<|>|=)[ \\t]*(?:[^\"']\\S+[^\"']|r?\".*\"))*).*$"
				}
			]
		}
	}
}